
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rem.electrocardiogramProjet"
    >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:label="@string/app_name"
        android:icon="@drawable/logo"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.rem.electrocardiogramProjet.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.rem.electrocardiogramProjet.Bluetooth"
            android:label="Bluetooth" >
            <intent-filter>
                <action android:name="android.intent.action.BT1" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>

